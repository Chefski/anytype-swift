default_platform(:ios)

platform :ios do

  lane :dev do
    deploy(
      release: false
    )
  end

  lane :release do
    deploy(
      release: true
    )
  end

lane :test do
    ensure_git_status_clean(show_uncommitted_changes: true)

    #setup_ci

    #ensure_git_status_clean

    #match(readonly: true)
    
    #ensure_git_status_clean

    #build_number = increment_build_number(xcodeproj: "Anytype.xcodeproj")
    #version = get_version_number(xcodeproj: "Anytype.xcodeproj")
    #full_version = "#{version}(#{build_number})"

    #ensure_git_status_clean
    #commit_version_bump(
    #  message: "Bump version #{full_version}",
    #  xcodeproj: "Anytype.xcodeproj"
    #)
    #add_git_tag(tag: full_version)

    # Reset icon changes
    #reset_git_repo(skip_clean: true)

    #push_to_git_remote
  end

  private_lane :deploy do |options| 
    setup_ci
    match(readonly: true)
    
    ensure_git_status_clean

    build_number = increment_build_number(xcodeproj: "Anytype.xcodeproj")
    version = get_version_number(xcodeproj: "Anytype.xcodeproj")
    full_version = "#{version}(#{build_number})"

    commit_version_bump(
      message: "Bump version #{full_version}",
      xcodeproj: "Anytype.xcodeproj"
    )
    add_git_tag(tag: full_version)

    if !options[:release] 
      #add_badge(
      #  shield: "#{version}-#{build_number}-blue",
      #  no_badge: true
      #)
    end
    
    build_app(
      scheme: "Anytype", 
      configuration: options[:release] ? "Release" : "Dev-Release"
    )

    upload_build_to_testflight

    # Reset icon changes
    reset_git_repo(skip_clean: true)

    push_to_git_remote
  end

  private_lane :upload_build_to_testflight do 
    api_key = app_store_connect_api_key(
        key_id: ENV['APP_STORE_CONNECT_KEY_ID'],
        issuer_id: ENV['APP_STORE_CONNECT_ISSUER_ID'],
        key_content: ENV['APP_STORE_CONNECT_KEY_CONTENT'],
        duration: 1200,
        in_house: false
    )

    upload_to_testflight(
      api_key: api_key, 
      skip_waiting_for_build_processing: true
    )
  end


  # Profiles

  lane :install_dev_profiles do
    match(readonly: true)
  end

  lane :generate_dev_profiles do
    match(force_for_new_devices: true)
  end

end
